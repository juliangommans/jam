
<div class="headFix">

  <div class="jumbotron mypage">
    <div class="black">
        <h3><%= current_user.name %></h3>
        <h4>(<%= current_user.email %>)</h4>
        <p><%= link_to "Change your password", edit_user_registration_path %></p><br>

        <div id="userList">
          <div class="row">
            <div class="col-md-5 colList">
              <h4>Your unwatched moviejams</h4>
                <ul>
                <% if @moviejams[0].empty? %>
                  <li>You have no unwatched movies.</li>
                <% else %>
                  <% @moviejams[0].each do |moviejam| %>
                    <li>
                      <%= moviejam.movie.title %>
                       - (your prewatch rating: <% if moviejam.prerating > 0 %><%= moviejam.prerating %><% else %>unrated<% end %>)
                      <%= button_to "Remove", {:controller => "moviejams", :action => 'remove', :id => moviejam.id }, :method => :post %>
                      <%= button_to "Watch", {:controller => "moviejams", :action => 'watched', :id => moviejam.id }, :method => :post %>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          <div class="col-md-5 colList">
              <h4>Watched Movies</h4>
              <ul>
                <% if @moviejams[1].empty? %>
                  <li>You have no watched movies in your list.</li>
                <% else %>
                  <% @moviejams[1].each do |moviejam| %>
                    <li>
                      <%= moviejam.movie.title %>
                       - (your prewatch rating: <%= moviejam.prerating %> - your postwatch rating: <%= moviejam.postrating %>)
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
       </div>
    </div>
</div>


</div>
