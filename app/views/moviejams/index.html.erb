<script> $('body').css({"background-image":"url(http://hdnextyear.com/wp-content/uploads/2015/02/hd-despicable-me-wallpapers-amp-desktop-backgrounds-movie-wallpapers-desktop-images-desktop-wallpapers.jpg)"});</script>

<div class="headFix">

    <div class="whiteNoise">
      <div class="black mypage">
        <h3><%= current_user.name %></h3>
        <h4>(<%= current_user.email %>)</h4>
        <p><%= link_to "Edit your details", edit_user_registration_path %></p><br>

        <div class="col-md-5 leftbox"><br>
           <h4>Unwatched Movies</h4>
            <% if @moviejams[0].empty? %>
                  <p>You have no unwatched movies.</p>
                <% else %>
                  <% @moviejams[0].each do |moviejam| %>
                      <p><%= moviejam.movie.title %></p>
                       - your before rating: (<%= moviejam.prerating < 0 || moviejam.prerating > 5 ? 'unrated' : 9733.chr(Encoding::UTF_8) * moviejam.prerating %>)
                      <div class="removebtn"><%= button_to "Remove", {:controller => "moviejams", :action => 'remove', :id => moviejam.id }, :method => :post %></div>
                      <div class="watchbtn">
                        <%= button_to "Watch", {:controller => "moviejams", :action => 'watched', :id => moviejam.id }, :method => :post %>
                      </div>
                      <br>
                  <% end %>
                <% end %>
        </div>

        <div class="col-md-5 rightbox"><br>
           <h4>Watched Movies</h4>
                          <% if @moviejams[1].empty? %>
                  <p>You have no watched movies in your list.</p>
                <% else %>
                  <% @moviejams[1].each do |moviejam| %>
                   <p style="padding-top: 5px"><%= moviejam.movie.title %></p>
                       - your before rating: (<%= moviejam.prerating < 0 || moviejam.prerating > 5 ? 'unrated' : 9733.chr(Encoding::UTF_8) * moviejam.prerating %>) - your after rating: (<%= moviejam.postrating < 0 || moviejam.postrating > 5 ? 'unrated' : 9733.chr(Encoding::UTF_8) * moviejam.postrating %>)
                  <br>
                  <% end %>
                <% end %>
        </div>

      </div>
    </div>

</div>

